{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Recherche
{% endblock %}

{% block body %}
    <h1>Resultat de votre recherche</h1>

    {% for key in result %}
        <div class="card_show">
            <div class="info">
                <h4 class="titre">{{ key.titre }}</h4>

                {% if key.promo is null %}
                {% else %}
                    <p class="promo">Offre spéciale :  {{ key.promo }} % </p>
                {% endif %}

                <div class="description">
                    <strong>Départ prévu le <em>{{ key.moisdepart|date('d/m/Y')}}</em></strong>
                    <p><strong>Détail :</strong> {{ key.description }}</p>
                </div>
                <div class="detail_voyage">
                    <div class="detail">
                        <p><strong>Durée : </strong>{{ key.dureedata }}</p>
                        <p><strong>Destination : </strong>{{ key.destination }}</p>
                        <p><strong>Hebergement: </strong>{{ key.typehebergement}}</p>
                    </div>
                    <div class="prix_sejour">
                        <div class="care">
                            <p>{{ key.prixsejour|number_format(2, ",", ".")}} €</p>
                        </div>
                    </div>
                </div>
                <div class="validate">
                    <button type="submit" class="validate_btn">Reserver ce séjour</button>
                </div>


            </div>

            <div class="image">
                <img src="{{ asset('images/' ~key.image1) }}" alt="" width="100%" height="100%">
            </div>
        </div>

    {% endfor %}


{% endblock %}
